<style>
.fade-out {
    opacity: 0;
    transform: translateY(-20px);
    transition: opacity 0.6s ease-in-out, transform 0.6s ease-in-out;
}
</style>

<% if (success && success.length) { %>
    <div class="alert alert-success alert-dismissible fade show col-lg-6 offset-lg-3 col-12 offset-0 mt-3 flash-message" role="alert">
       <%= success %>
       <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>

<% if (error && error.length) { %>
    <div class="alert alert-danger alert-dismissible fade show col-lg-6 offset-lg-3 col-12 offset-0 mt-3 flash-message" role="alert">
       <%= error %>
       <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>


<script>
  // Auto dismiss flash messages after 3 seconds
  setTimeout(() => {
    const flash = document.querySelectorAll('.flash-message');
    flash.forEach(msg => {
      msg.classList.add('fade-out');
      setTimeout(() => msg.remove(), 600);  // remove after animation
    });
  }, 3000); // 3 seconds
</script>

