<style>
  /* Desktop view styling for navbar */
  .search-btn {
    background-color: #ff385c;
    color: white;
    border-radius: 25px;
    padding: 0 1rem 0 1rem;
  }

  .search-btn:hover {
    background-color: #ff385c;
    color: white;
  }

  .search-btn i {
    display: inline;
    margin-right: 0.5rem;
  }

  .search-inp {
    border-radius: 25px;
    border: 1px solid #dddddd;
    padding: 0.5rem 3rem 0.5rem 3rem;
  }

  /* Desktop styling */
  @media (min-width: 768px) {
    
    /* Hides mobile  elements on desktop */
    .mobile-search,
    .navbar-toggler,
    #navbarDropdownMenu {
      display: none !important;  
    }

    /* Center desktop search bar */
    .navbar .navbar-nav.mx-auto {
      flex-grow: 1;
      display: flex !important;
      justify-content: center;
    }

    .navbar .navbar-nav.right-links {
      display: flex !important;
      align-items: center;
      gap: 1rem;
    }
  }

  /* mobile view styling for navbar */
  @media (max-width: 767px) {
 
    /* Hide desktop elements on mobile */
    .desktop-search,
    .right-links {
      display: none !important;  /*  Hides desktop search & links on mobile */
    }

    /* App logo + Explore text */
    .navbar-brand {
      display: flex;
      flex-direction: column;
      align-items: flex-start;
    }

    .navbar-brand i {
      font-size: 1.5rem;
    }

    .navbar-brand span {
      font-size: 0.85rem;
      font-weight: 600;
      margin-top: 2px;
    }

    /* Mobile search bar center */
    .mobile-search {
      display: flex !important;
      justify-content: center;
      align-items: center;
      flex: 1;
      margin: 0 0.5rem;
    }

    .mobile-search input {
      width: 70%;
      font-size: 0.8rem;
      padding: 0.3rem 0.75rem;
    }

    .mobile-search button {
      font-size: 0.8rem;
      padding: 0.3rem 0.6rem;
    }

    /* Dropdown menu style */
    .navbar-collapse {
      position: absolute;
      top: 100%;
      right: 0;
      width: 180px;
      background-color: #fff;
      border: 1px solid #ddd;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      padding: 0.5rem 0;
      z-index: 1000;
    }

    .navbar-collapse .nav-link {
      padding: 0.5rem 1rem;
      color: #333;
      text-align: left;
    }
  }
</style>

 <!-- Navbar --> 
 <nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top"> 
  <div class="container-fluid d-flex align-items-center justify-content-between"> 
    
    <!-- LEFT --> 
    <a class="navbar-brand d-flex align-items-center" href="/listings"> 
      <i class="fa-regular fa-compass"></i> 
      <span>Explore</span> 
    </a> 
  
    <!-- DESKTOP SEARCH BAR (Centered) --> 
    <div class="navbar-nav mx-auto desktop-search"> 
      <form class="d-flex" role="search"> 
        <input type="search" class="form-control search-inp me-2" placeholder="Search destinations" aria-label="Search" /> 
        <button class="btn search-btn" type="submit"> 
          <i class="fa-solid fa-magnifying-glass"></i>Search 
        </button> 
      </form> 
    </div> 
    
    <!--  DESKTOP RIGHT LINKS --> 
    <div class="navbar-nav right-links"> 
      <a class="nav-link" href="/listings/new">Airbnb your home</a> 
      
      <% if(!currUser) { %> 
        <a class="nav-link" href="/signup"><b>Sign up</b></a> 
        <a class="nav-link" href="/login"><b>Log in</b></a> 
      <% } %> 
      
      <% if(currUser) { %> 
        <a class="nav-link" href="/logout"><b>Log out</b></a> 
      <% } %> 
    </div>
    
    <!-- Center: small search bar --> 
    <div class="mobile-search"> 
      <form class="d-flex" role="search"> 
        <input type="search" class="form-control search-inp me-2" placeholder="Search" aria-label="Search" /> 
        <button class="btn search-btn" type="submit"> 
          <i class="fa-solid fa-magnifying-glass"></i> 
        </button> 
      </form> 
    </div> 
    
    <!-- Right: Hamburger button --> 
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarDropdownMenu" aria-controls="navbarDropdownMenu" aria-expanded="false" aria-label="Toggle navigation" > 
      <span class="navbar-toggler-icon"></span> 
    </button> 
    
    <!-- MOBILE Dropdown Menu --> 
    <div class="collapse navbar-collapse" id="navbarDropdownMenu"> 
      <div class="navbar-nav"> 
        <% if(currUser) { %> 
          <a class="nav-link" href="/listings/new">Airbnb your home</a> 
          <a class="nav-link" href="/logout"><b>Log out</b></a> 
        <% } else { %> 
          
          <a class="nav-link" href="/signup"><b>Sign up</b></a> 
          <a class="nav-link" href="/login"><b>Log in</b></a> 
        <% } %> 
      </div> 
    </div>    
  </div> 
</nav>