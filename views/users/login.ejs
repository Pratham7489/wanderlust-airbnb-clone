<% layout("/layouts/boilerplate") -%>

<div class="row mt-3">
    <div class="col-6 offset-3">

        <h1>Login to Wanderlust</h1>
        <form action="/login" method="POST" class="needs-validation mb-3" novalidate>
            <div class="mb-3">
               <label for="username" class="form-label">username</label>
                <input  
                    name="username" 
                    id="username"
                    type="text" 
                    class="form-control"
                    required
                />
            </div>

             <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input  
                    name="password" 
                    id="password"
                    type="password" 
                    class="form-control"
                    required
                />
            </div>

            <div class="d-flex justify-content-between align-items-end">
               <button class="btn btn-success">Login</button>
               <p class="mb-0 auth-text">Don't have an account? <a href="/signup">Sign up</a></p>
            </div>
        </form>
    </div>
</div>
